# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*.{ts,json,html,less,scss,css}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.json]
indent_style = space
indent_size = 2
charset=utf-8
end_of_line = lf
