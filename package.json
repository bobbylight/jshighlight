{
  "name": "jshighlight",
  "version": "0.1.0",
  "description": "Synchronously highlight code in the browser.",
  "main": "/",
  "scripts": {
    "clean": "rimraf demo coverage lib",
    "build": "tsc && rimraf ./lib/demo-app && cp src/app/*.d.ts ./lib/",
    "watch": "cross-env NODE_ENV=dev webpack --config webpack/webpack.config.js --watch",
    "test": "cross-env NODE_ENV=test karma start karma.unit.js",
    "coverage": "cross-env NODE_ENV=test karma start karma.coverage.js"
  },
  "author": "Robert Futrell <robert.e.futrell@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bobbylight/jshighlight.git"
  },
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "files": [
    "lib/"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/jasmine": "2.5.47",
    "copy-webpack-plugin": "4.0.1",
    "cross-env": "4.0.0",
    "css-loader": "0.28.0",
    "file-loader": "0.11.1",
    "html-webpack-plugin": "2.28.0",
    "istanbul-instrumenter-loader": "2.0.0",
    "jasmine": "2.6.0",
    "karma": "1.6.0",
    "karma-coverage": "1.1.1",
    "karma-coverage-istanbul-reporter": "1.2.1",
    "karma-jasmine": "1.1.0",
    "karma-phantomjs-launcher": "1.0.4",
    "karma-webpack": "2.0.3",
    "less": "2.7.2",
    "less-loader": "4.0.3",
    "phantomjs-prebuilt": "2.1.14",
    "raw-loader": "0.5.1",
    "rimraf": "2.6.1",
    "style-loader": "0.16.1",
    "ts-loader": "2.0.3",
    "tslint": "5.1.0",
    "tslint-loader": "3.5.3",
    "typescript": "2.3.2",
    "url-loader": "0.5.8",
    "webpack": "2.4.1"
  }
}
